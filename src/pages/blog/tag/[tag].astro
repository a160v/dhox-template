---
/**
 * Tag-filtered blog listing page
 * Generates static pages for each tag defined in SITE_CONFIG
 */
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import FormattedDate from "../../../components/FormattedDate.astro";
import TagNav from "../../../components/TagNav.astro";
import Footer from "../../../components/Footer.astro";
import { SITE_TITLE, SITE_CONFIG } from "../../../consts";

export async function getStaticPaths() {
  // Generate a page for each tag in the config
  return SITE_CONFIG.nav.blogTags.map((tag) => ({
    params: { tag },
  }));
}

const { tag } = Astro.params;

// Get all posts and filter by current tag
const allPosts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const posts = allPosts.filter((post) => post.data.tags?.includes(tag));

// Breadcrumb data for footer
const tagLabel = tag.charAt(0).toUpperCase() + tag.slice(1);
const breadcrumbs = [
  { label: "Home", href: "/" },
  { label: "Blog", href: "/blog" },
  { label: tagLabel },
];
---

<BaseLayout
  title={`${tag.charAt(0).toUpperCase() + tag.slice(1)} â€“ ${SITE_TITLE}`}
  description={`Posts tagged with "${tag}"`}
>
  <main>
    <header class="blog-header reveal">
      <TagNav currentTag={tag} />
    </header>

    {
      posts.length > 0 && (
        <section class="posts-grid">
          {posts.map((post, index) => (
            <article
              class="post-card reveal"
              style={`animation-delay: ${index * 80}ms`}
            >
              <a href={`/blog/${post.id}/`} class="post-link">
                {post.data.heroImage && (
                  <div class="post-image">
                    <Image
                      src={post.data.heroImage}
                      alt={post.data.title}
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="post-content">
                  <time class="post-date">
                    <FormattedDate date={post.data.pubDate} />
                  </time>
                  <h3 class="post-title">{post.data.title}</h3>
                  {post.data.description && (
                    <p class="post-excerpt">{post.data.description}</p>
                  )}
                </div>
              </a>
            </article>
          ))}
        </section>
      )
    }

    {
      posts.length === 0 && (
        <div class="no-posts reveal">
          <p>No posts with this tag yet.</p>
        </div>
      )
    }

    <Footer breadcrumbs={breadcrumbs} />
  </main>
</BaseLayout>

<style>
  main {
    padding-top: var(--space-12);
    padding-bottom: var(--space-16);
    max-width: 900px;
  }

  .blog-header {
    margin-bottom: var(--space-10);
  }

  /* Post Cards - 2 Column Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  .post-link {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-smooth);
    height: 100%;
  }

  .post-link:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: transparent;
  }

  .post-image {
    width: 100%;
    height: 160px;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .post-link:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: var(--space-5);
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    flex: 1;
  }

  .post-date {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-title {
    font-size: var(--text-lg);
    font-weight: 600;
    margin: 0;
    line-height: 1.4;
    transition: color var(--transition-fast);
  }

  .post-link:hover .post-title {
    color: var(--color-accent);
  }

  .post-excerpt {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .no-posts {
    text-align: center;
    padding: var(--space-16);
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    main {
      padding-top: var(--space-8);
    }

    .post-image {
      height: 140px;
    }
  }
</style>
