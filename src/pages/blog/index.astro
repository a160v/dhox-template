---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import { SITE_TITLE } from "../../consts";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title={`Blog â€“ ${SITE_TITLE}`}
  description="Read my latest thoughts and articles"
>
  <main>
    <header class="blog-header reveal">
      <h1>Blog</h1>
      <p class="blog-subtitle">Thoughts, ideas, and stories.</p>
    </header>

    <section class="posts-grid">
      {
        posts.map((post, index) => (
          <article
            class="post-card reveal"
            style={`animation-delay: ${index * 100}ms`}
          >
            <a href={`/blog/${post.id}/`} class="post-link">
              {post.data.heroImage && (
                <div class="post-image">
                  <img
                    src={post.data.heroImage.src}
                    alt={post.data.title}
                    loading="lazy"
                  />
                </div>
              )}
              <div class="post-content">
                <time class="post-date">
                  <FormattedDate date={post.data.pubDate} />
                </time>
                <h2 class="post-title">{post.data.title}</h2>
                {post.data.description && (
                  <p class="post-excerpt">{post.data.description}</p>
                )}
              </div>
            </a>
          </article>
        ))
      }
    </section>

    {
      posts.length === 0 && (
        <div class="no-posts reveal">
          <p>No posts yet. Check back soon!</p>
        </div>
      )
    }
  </main>
</BaseLayout>

<style>
  main {
    padding-top: var(--space-12);
    padding-bottom: var(--space-12);
    max-width: 800px;
  }

  .blog-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .blog-header h1 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-3);
  }

  .blog-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin: 0;
  }

  .posts-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .post-link {
    display: flex;
    gap: var(--space-6);
    padding: var(--space-5);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-smooth);
  }

  .post-link:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: transparent;
  }

  .post-image {
    flex-shrink: 0;
    width: 180px;
    height: 120px;
    overflow: hidden;
    border-radius: var(--radius-lg);
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-smooth);
  }

  .post-link:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: var(--space-2);
  }

  .post-date {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-weight: 500;
  }

  .post-title {
    font-size: var(--text-xl);
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
    transition: color var(--transition-fast);
  }

  .post-link:hover .post-title {
    color: var(--color-accent);
  }

  .post-excerpt {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .no-posts {
    text-align: center;
    padding: var(--space-16);
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .post-link {
      flex-direction: column;
      gap: var(--space-4);
    }

    .post-image {
      width: 100%;
      height: 180px;
    }

    .blog-header h1 {
      font-size: var(--text-3xl);
    }
  }
</style>
