---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import BaseLayout from "../../layouts/BaseLayout.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import TagNav from "../../components/TagNav.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";

// Get all posts sorted by date
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Split into featured (first) and rest
const [featuredPost, ...restPosts] = posts;
---

<BaseLayout
  title={`Blog – ${SITE_TITLE}`}
  description={`Blog – ${SITE_DESCRIPTION}`}
>
  <main>
    <header class="blog-header reveal">
      <TagNav />
    </header>

    {
      featuredPost && (
        <article class="featured-post reveal">
          <a href={`/blog/${featuredPost.id}/`} class="featured-link">
            {featuredPost.data.heroImage && (
              <div class="featured-image">
                <Image
                  src={featuredPost.data.heroImage}
                  alt={featuredPost.data.title}
                  loading="eager"
                />
              </div>
            )}
            <div class="featured-content">
              <div class="featured-meta">
                <span class="featured-badge">Latest</span>
                <time class="featured-date">
                  <FormattedDate date={featuredPost.data.pubDate} />
                </time>
              </div>
              <h2 class="featured-title">{featuredPost.data.title}</h2>
              {featuredPost.data.description && (
                <p class="featured-excerpt">{featuredPost.data.description}</p>
              )}
              <span class="read-more">Read article →</span>
            </div>
          </a>
        </article>
      )
    }

    {
      restPosts.length > 0 && (
        <section class="posts-grid">
          {restPosts.map((post, index) => (
            <article
              class="post-card reveal"
              style={`animation-delay: ${index * 80}ms`}
            >
              <a href={`/blog/${post.id}/`} class="post-link">
                {post.data.heroImage && (
                  <div class="post-image">
                    <Image
                      src={post.data.heroImage}
                      alt={post.data.title}
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="post-content">
                  <time class="post-date">
                    <FormattedDate date={post.data.pubDate} />
                  </time>
                  <h3 class="post-title">{post.data.title}</h3>
                  {post.data.description && (
                    <p class="post-excerpt">{post.data.description}</p>
                  )}
                </div>
              </a>
            </article>
          ))}
        </section>
      )
    }

    {
      posts.length === 0 && (
        <div class="no-posts reveal">
          <p>No posts yet. Check back soon!</p>
        </div>
      )
    }
  </main>
</BaseLayout>

<style>
  main {
    padding-top: var(--space-12);
    padding-bottom: var(--space-16);
    max-width: 900px;
  }

  .blog-header {
    margin-bottom: var(--space-10);
  }

  /* Featured Post - Full Width Hero */
  .featured-post {
    margin-bottom: var(--space-12);
  }

  .featured-link {
    display: block;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-2xl);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-smooth);
  }

  .featured-link:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-2xl);
    border-color: transparent;
  }

  .featured-image {
    width: 100%;
    height: 280px;
    overflow: hidden;
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .featured-link:hover .featured-image img {
    transform: scale(1.03);
  }

  .featured-content {
    padding: var(--space-6) var(--space-8);
  }

  .featured-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
  }

  .featured-badge {
    background: var(--color-accent);
    color: white;
    font-size: var(--text-xs);
    font-weight: 600;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .featured-date {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .featured-title {
    font-size: var(--text-2xl);
    font-weight: 700;
    margin: 0 0 var(--space-3) 0;
    line-height: 1.3;
    transition: color var(--transition-fast);
  }

  .featured-link:hover .featured-title {
    color: var(--color-accent);
  }

  .featured-excerpt {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0 0 var(--space-4) 0;
  }

  .read-more {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
    transition: all var(--transition-fast);
  }

  .featured-link:hover .read-more {
    letter-spacing: 0.02em;
  }

  /* Post Cards - 2 Column Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  .post-link {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-smooth);
    height: 100%;
  }

  .post-link:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: transparent;
  }

  .post-image {
    width: 100%;
    height: 160px;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .post-link:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: var(--space-5);
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    flex: 1;
  }

  .post-date {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-title {
    font-size: var(--text-lg);
    font-weight: 600;
    margin: 0;
    line-height: 1.4;
    transition: color var(--transition-fast);
  }

  .post-link:hover .post-title {
    color: var(--color-accent);
  }

  .post-excerpt {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .no-posts {
    text-align: center;
    padding: var(--space-16);
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }

    .featured-image {
      height: 200px;
    }

    .featured-content {
      padding: var(--space-5);
    }

    .featured-title {
      font-size: var(--text-xl);
    }
  }

  @media (max-width: 480px) {
    main {
      padding-top: var(--space-8);
    }

    .post-image {
      height: 140px;
    }
  }
</style>
