---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";

// Breadcrumb data for footer
const breadcrumbs = [{ label: "Home", href: "/" }, { label: "Blog" }];

// Get all posts sorted by date
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title={`Blog – ${SITE_TITLE}`}
  description={`Blog – ${SITE_DESCRIPTION}`}
>
  <main id="main-content">
    <header class="blog-header reveal">
      <h1>Blog roll</h1>
    </header>

    <div class="blog-list reveal">
      <ul class="post-list">
        {
          posts.map((post, index) => (
            <li class="post-item" style={`animation-delay: ${index * 50}ms`}>
              <a href={`/blog/${post.id}/`} class="post-link">
                <div class="post-header-row">
                  <span class="post-title">{post.data.title}</span>
                  <time
                    class="post-date"
                    datetime={post.data.pubDate.toISOString()}
                  >
                    {post.data.pubDate.toLocaleDateString("en-GB", {
                      day: "numeric",
                      month: "long",
                      year: "numeric",
                    })}
                  </time>
                </div>
                {post.data.description && (
                  <p class="post-description">{post.data.description}</p>
                )}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    {
      posts.length === 0 && (
        <div class="no-posts reveal">
          <p>No posts yet. Check back soon!</p>
        </div>
      )
    }

    <Footer breadcrumbs={breadcrumbs} />
  </main>
</BaseLayout>

<style>
  main {
    padding-top: var(--space-12);
    padding-bottom: var(--space-16);
    max-width: 720px;
    margin: 0 auto;
  }

  .blog-header {
    margin-bottom: var(--space-12);
  }

  h1 {
    /* font-family: var(--font-serif-forum); */
    font-size: var(--text-4xl);
    font-weight: 400;
    margin: 0;
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post-item {
    margin-bottom: var(--space-8);
    opacity: 0.9; /* For animation */
    animation: fadeInUp 0.5s ease-out forwards;
  }

  .post-link {
    display: block;
    text-decoration: none;
    color: var(--color-text);
    transition: opacity 0.2s ease;
  }

  .post-link:hover {
    opacity: 0.5; /* Simple fade hover */
  }

  .post-header-row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    width: 100%;
    margin-bottom: var(--space-2);
  }

  .post-title {
    font-family: var(--font-sans);
    font-size: var(--text-xl);
    font-weight: 600;
    line-height: 1.3;
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    white-space: nowrap;
    margin-left: var(--space-4);
    font-style: normal;
  }

  .post-description {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0;
    /* font-style: italic; */
  }

  .no-posts {
    text-align: center;
    padding: var(--space-16);
    color: var(--color-text-muted);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 640px) {
    .post-header-row {
      flex-direction: column;
      gap: var(--space-1);
      margin-bottom: var(--space-2);
    }

    .post-date {
      margin-left: 0;
      font-size: var(--text-xs);
      opacity: 0.8;
    }
  }
</style>
