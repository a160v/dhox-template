---
import BaseLayout from "../layouts/BaseLayout.astro";
import eiffelTowerGif from "../assets/sparkling_tour_eiffel_at_night.gif";
---

<BaseLayout
  title="Error 404"
  description="The page you are looking for does not exist."
>
  <main class="error-page reveal">
    <div class="content-wrapper">
      <h1 class="error-code">Error 404</h1>
      <p class="error-message">
        Sorry for the inconvenience, please check your URL or go home.
        <br />
        <br />
        Meanwhile, enjoy a nice view of the Tour Eiffel.
      </p>

      <div class="eiffel-wrapper">
        <img
          src={eiffelTowerGif.src}
          alt="Sparkling Eiffel Tower at Night"
          class="eiffel-gif"
          width="300"
          height="400"
        />
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .error-page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
    text-align: center;
    padding: var(--space-4);
  }

  .content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
    max-width: 600px;
  }

  /* Large Gradient 404 */
  .error-code {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    margin: 0;
    background: linear-gradient(135deg, #ff9f0a 0%, #ff375f 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: drop-shadow(0 4px 12px rgba(255, 55, 95, 0.3));
    letter-spacing: -0.02em;
  }

  .error-message {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin: 0;
    font-weight: 500;
    line-height: 1.6;
  }

  /* Eiffel GIF */
  .eiffel-wrapper {
    margin: var(--space-4) 0;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
    border: 4px solid var(--color-surface);
  }

  .eiffel-gif {
    display: block;
    width: 100%;
    max-width: 300px;
    height: auto;
    object-fit: cover;
  }

  /* Glassmorphic/Pill Button */
  .home-button {
    margin-top: var(--space-4);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 32px;
    background: var(--color-surface);
    color: var(--color-text);
    border: 1px solid var(--color-border);
    border-radius: 9999px;
    text-decoration: none;
    font-weight: 600;
    font-size: var(--text-base);
    transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: var(--shadow-sm);
  }

  .home-button:hover {
    transform: scale(1.05);
    background: var(--color-text);
    color: var(--color-bg);
    box-shadow: var(--shadow-md);
    border-color: transparent;
  }

  /* Reveal Animation */
  .reveal {
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }

  .reveal.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 640px) {
    .error-code {
      font-size: 3rem;
    }
    .error-message {
      font-size: var(--text-base);
    }
  }
</style>
