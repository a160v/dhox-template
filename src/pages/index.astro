---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main class="hero-container">
    <div class="hero">
      <h1 class="hero-title animate-fade-in-up">
        <span class="greeting">Hello, visitor</span>
        <span class="name">I am Aleks</span>
      </h1>

      <p class="hero-subtitle animate-fade-in-up delay-1">
        Welcome to my corner of the internet.
      </p>

      <div class="hero-cta animate-fade-in-up delay-2">
        <a href="/about" class="btn btn-primary">About me</a>
        <a href="/blog" class="btn btn-secondary">Read my blog</a>
      </div>
    </div>

    <!-- <div class="decorative-gradient"></div> -->
  </main>
</BaseLayout>

<style>
  .hero-container {
    /* Subtract body's dock padding to prevent extra scrollable whitespace on mobile */
    min-height: calc(100vh - var(--dock-height) - var(--space-8));
    min-height: calc(100dvh - var(--dock-height) - var(--space-8));
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    padding: var(--space-8);
  }

  .hero {
    text-align: center;
    max-width: 600px;
    z-index: 1;
  }

  .hero-title {
    margin-bottom: var(--space-6);
  }

  .greeting {
    display: block;
    font-size: var(--text-xl);
    font-weight: 400;
    color: var(--color-text-muted);
    margin-bottom: var(--space-2);
    letter-spacing: 0;
  }

  .name {
    display: block;
    font-size: var(--text-hero);
    font-weight: 700;
    background: linear-gradient(
      135deg,
      var(--color-text) 0%,
      var(--color-accent) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    margin-bottom: var(--space-10);
    line-height: 1.6;
  }

  .hero-cta {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Button hover shadow override for homepage accent */
  .btn-primary:hover {
    box-shadow: 0 10px 20px rgba(0, 113, 227, 0.2);
  }

  /* Decorative animated gradient */
  .decorative-gradient {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle at 30% 30%,
      rgba(var(--gradient-accent-rgb, 0, 113, 227), 0.08) 0%,
      transparent 50%
    );
    animation: gradientMove 20s ease-in-out infinite;
    pointer-events: none;
  }

  @keyframes gradientMove {
    0%,
    100% {
      transform: translate(0, 0) rotate(0deg);
    }
    25% {
      transform: translate(10%, 5%) rotate(5deg);
    }
    50% {
      transform: translate(-5%, 10%) rotate(-5deg);
    }
    75% {
      transform: translate(-10%, -5%) rotate(3deg);
    }
  }

  /* Animation initial states */
  .animate-fade-in-up {
    opacity: 0;
  }

  @media (max-width: 640px) {
    .hero-container {
      padding: var(--space-6);
    }
  }
</style>
