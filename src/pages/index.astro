---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main class="hero-container">
    <div class="hero">
      <h1 class="hero-title animate-fade-in-up">
        <span class="name">Aleks Vangjelofski</span>
      </h1>

      <p class="hero-tagline animate-fade-in-up delay-1">Policy meets code.</p>

      <p class="hero-bio animate-fade-in-up delay-2">
        I work at the intersection of <strong
          >technology, policy, and international coordination</strong
        >. Currently studying European Transformation at the College of Europe,
        with experience spanning startups, EU digital regulation, and software
        development.
      </p>
    </div>
  </main>
</BaseLayout>

<style>
  .hero-container {
    min-height: calc(100vh - var(--dock-height) - var(--space-8));
    min-height: calc(100dvh - var(--dock-height) - var(--space-8));
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    padding: var(--space-8);
  }

  .hero {
    text-align: center;
    max-width: 600px;
    z-index: 1;
  }

  .hero-title {
    margin-bottom: var(--space-4);
  }

  .name {
    display: block;
    font-size: var(--text-hero);
    font-weight: 700;
    background: linear-gradient(
      135deg,
      var(--color-text) 0%,
      var(--color-accent) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-tagline {
    font-size: var(--text-2xl);
    color: var(--color-text-muted);
    font-weight: 500;
    margin-bottom: var(--space-6);
    letter-spacing: -0.02em;
  }

  .hero-bio {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: 1.7;
    max-width: 480px;
    margin: 0 auto;
  }

  .hero-bio strong {
    color: var(--color-text);
    font-weight: 600;
  }

  /* Animation initial states */
  .animate-fade-in-up {
    opacity: 0;
  }

  .delay-1 {
    animation-delay: 0.1s;
  }

  .delay-2 {
    animation-delay: 0.2s;
  }

  @media (max-width: 640px) {
    .hero-container {
      padding: var(--space-6);
    }

    .hero-tagline {
      font-size: var(--text-xl);
    }

    .hero-bio {
      font-size: var(--text-base);
    }
  }
</style>
