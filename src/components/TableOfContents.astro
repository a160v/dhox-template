---
/**
 * TableOfContents Component
 * Collapsible accordion for blog post navigation
 *
 * @features
 * - Automatically generates links from H2/H3 headings
 * - Collapsible implementation using <details>/<summary>
 * - Sticky positioning support (via parent container)
 * - Smooth scroll behavior
 *
 * @usage
 * <TableOfContents headings={[{ depth: 2, slug: "intro", text: "Introduction" }]} />
 */
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;

// Filter to h2 and h3 headings for TOC
const tocItems = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
const hasTocItems = tocItems.length > 0;
---

{
  hasTocItems && (
    <details class="toc-accordion">
      <summary class="toc-trigger">
        <span class="toc-label">TABLE OF CONTENTS</span>
        <span class="toc-meta">
          {tocItems.length} sections
          <svg
            class="toc-chevron"
            width="12"
            height="12"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="6 9 12 15 18 9" />
          </svg>
        </span>
      </summary>

      <nav class="toc-content">
        <ul class="toc-list">
          {tocItems.map((heading) => (
            <li class={`toc-item depth-${heading.depth}`}>
              <a href={`#${heading.slug}`} class="toc-link">
                {heading.text}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </details>
  )
}

<style>
  .toc-accordion {
    margin-bottom: var(--space-10);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    overflow: hidden;
  }

  .toc-trigger {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-4) var(--space-6);
    cursor: pointer;
    color: var(--color-text);
    font-family: var(--font-sans);
    transition: background-color var(--transition-fast);
    list-style: none; /* Remove default arrow */
  }

  .toc-trigger::-webkit-details-marker {
    display: none; /* Remove default arrow in Safari */
  }

  .toc-trigger:hover {
    background-color: var(--color-bg);
  }

  .toc-label {
    font-size: var(--text-xs);
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .toc-meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .toc-chevron {
    transition: transform var(--transition-base);
  }

  /* Rotate chevron when open */
  .toc-accordion[open] .toc-chevron {
    transform: rotate(180deg);
  }

  .toc-content {
    border-top: 1px solid var(--color-border);
    background: var(--color-bg);
    padding: var(--space-4) 0;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin: 0;
  }

  .toc-link {
    display: block;
    padding: var(--space-2) var(--space-6);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    border-left: 2px solid transparent;
    transition: all var(--transition-fast);
  }

  .toc-link:hover {
    color: var(--color-accent);
    background-color: var(--color-surface);
  }

  /* Indentation for H3 */
  .toc-item.depth-3 .toc-link {
    padding-left: var(--space-10);
    font-size: var(--text-xs);
  }
</style>
