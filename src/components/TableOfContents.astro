---
/**
 * TableOfContents Component
 * Collapsible accordion with smooth parchment-like animation
 * Uses pure CSS checkbox hack for reliable animation
 */
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;
const tocItems = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
const hasTocItems = tocItems.length > 0;
const checkboxId = `toc-${Math.random().toString(36).substring(2, 9)}`;
---

{
  hasTocItems && (
    <div class="toc-accordion">
      <input type="checkbox" class="toc-checkbox" id={checkboxId} />
      <label for={checkboxId} class="toc-trigger">
        <span class="toc-label">TABLE OF CONTENTS</span>
        <span class="toc-meta">
          {tocItems.length} sections
          <svg
            class="toc-chevron"
            width="12"
            height="12"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="6 9 12 15 18 9" />
          </svg>
        </span>
      </label>

      <div class="toc-content">
        <ul class="toc-list">
          {tocItems.map((heading, index) => (
            <li
              class={`toc-item depth-${heading.depth}`}
              style={`--i: ${index}`}
            >
              <a href={`#${heading.slug}`} class="toc-link">
                {heading.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  )
}

<style>
  .toc-checkbox {
    display: none;
  }

  .toc-accordion {
    margin-bottom: var(--space-10);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    overflow: hidden;
  }

  .toc-trigger {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-4) var(--space-6);
    cursor: pointer;
    font-family: var(--font-sans);
  }

  .toc-trigger:hover {
    background-color: var(--color-bg);
  }

  .toc-label {
    font-size: var(--text-xs);
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .toc-meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .toc-chevron {
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .toc-content {
    max-height: 0;
    overflow: hidden;
    background: var(--color-bg);
    border-top: 1px solid transparent;
    transition: max-height 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .toc-list {
    list-style: none;
    padding: var(--space-4) 0;
    margin: 0;
  }

  .toc-item {
    opacity: 0;
    transform: translateX(-12px);
    transition:
      opacity 0.3s ease-out,
      transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    transition-delay: calc(0.1s + var(--i) * 0.05s);
  }

  .toc-link {
    display: block;
    padding: var(--space-2) var(--space-6);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .toc-link:hover {
    color: var(--color-accent);
  }

  .toc-item.depth-3 .toc-link {
    padding-left: var(--space-10);
    font-size: var(--text-xs);
  }

  /* Open state */
  .toc-checkbox:checked + .toc-trigger .toc-chevron {
    transform: rotate(180deg);
  }

  .toc-checkbox:checked ~ .toc-content {
    max-height: max-content;
    border-top-color: var(--color-border);
  }

  .toc-checkbox:checked ~ .toc-content .toc-item {
    opacity: 1;
    transform: translateX(0);
  }
</style>
