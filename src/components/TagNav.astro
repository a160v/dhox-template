---
/**
 * Tag Navigation Component
 * Displays a horizontal list of tag filters for the blog
 */
import { SITE_CONFIG } from "../consts";

interface Props {
  currentTag?: string;
  allTag?: string; // Label for "all posts" option
}

const { currentTag, allTag = "All" } = Astro.props;
const tags = SITE_CONFIG.nav.blogTags;
---

<nav class="tag-nav">
  <a href="/blog" class:list={["tag-link", { active: !currentTag }]}>
    {allTag}
  </a>
  {
    tags.map((tag) => (
      <a
        href={`/blog/tag/${tag}`}
        class:list={["tag-link", { active: currentTag === tag }]}
      >
        {tag.charAt(0).toUpperCase() + tag.slice(1)}
      </a>
    ))
  }
</nav>

<style>
  .tag-nav {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
    flex-wrap: wrap;
  }

  .tag-link {
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-base);
    padding: var(--space-1) 0;
  }

  .tag-link:hover {
    color: var(--color-text);
  }

  .tag-link.active {
    color: var(--color-text);
    font-weight: 700;
  }

  @media (max-width: 480px) {
    .tag-link {
      font-size: var(--text-xl);
    }
  }
</style>
