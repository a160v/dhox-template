---
/**
 * Timeline Component
 * Vertical timeline for storytelling with alternating left/right content
 *
 * @features
 * - Alternating Left/Right alignment
 * - Responsive Mobile Layout (Stack vertically)
 * - Variant support (Default, Highlight, Milestone)
 * - Content sanitization (via set:html)
 *
 * TABLE OF CONTENTS
 * -----------------
 * 1. Interfaces (TimelineEntry, Props)
 * 2. HTML Template (Loop rendering)
 * 3. Styles (Timeline Structure, Dots, Connectors)
 *
 * @usage
 * <Timeline entries={[ { date: "2024", title: "Event", content: "Desc" } ]} />
 */
interface TimelineEntry {
  date: string;
  title: string;
  content: string;
  variant?: "default" | "highlight" | "milestone";
}

interface Props {
  entries: TimelineEntry[];
}

const { entries } = Astro.props;
---

<div class="timeline">
  {
    entries.map((entry, index) => (
      <div
        class:list={[
          "timeline-item",
          entry.variant || "default",
          index % 2 === 0 ? "left" : "right",
        ]}
      >
        <div class="timeline-marker">
          <span class="timeline-dot" />
        </div>
        <div class="timeline-content">
          <span class="timeline-date">{entry.date}</span>
          <h3 class="timeline-title">{entry.title}</h3>
          <p class="timeline-text" set:html={entry.content} />
        </div>
      </div>
    ))
  }
  <div class="timeline-line"></div>
</div>

<style>
  .timeline {
    position: relative;
    padding: var(--space-8) 0;
    max-width: 800px;
    margin: 0 auto;
  }

  .timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
    transform: translateX(-50%);
    z-index: 0;
  }

  .timeline-item {
    position: relative;
    display: flex;
    margin-bottom: var(--space-10);
    z-index: 1;
  }

  .timeline-item.left {
    flex-direction: row;
    text-align: right;
    padding-right: calc(50% + var(--space-8));
  }

  .timeline-item.right {
    flex-direction: row-reverse;
    text-align: left;
    padding-left: calc(50% + var(--space-8));
  }

  .timeline-marker {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
  }

  .timeline-dot {
    display: block;
    width: 14px;
    height: 14px;
    background: var(--color-bg);
    border: 2px solid var(--color-text-muted);
    border-radius: 50%;
    transition: all var(--transition-base);
  }

  /* Variants */
  .timeline-item.highlight .timeline-dot {
    background: var(--color-accent);
    border-color: var(--color-accent);
  }

  .timeline-item.milestone .timeline-dot {
    width: 18px;
    height: 18px;
    background: var(--color-accent);
    border-color: var(--color-accent);
    box-shadow: 0 0 0 4px rgba(0, 113, 227, 0.2);
  }

  .timeline-content {
    flex: 1;
  }

  .timeline-date {
    display: block;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-weight: 500;
    margin-bottom: var(--space-1);
  }

  .timeline-title {
    font-size: var(--text-lg);
    font-weight: 600;
    margin: 0 0 var(--space-2) 0;
    color: var(--color-text);
  }

  .timeline-text {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--color-text-muted);
    margin: 0;
  }

  .timeline-text :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  /* Mobile: Stack vertically */
  @media (max-width: 640px) {
    .timeline-line {
      left: 20px;
    }

    .timeline-item.left,
    .timeline-item.right {
      flex-direction: row;
      text-align: left;
      padding-left: 50px;
      padding-right: 0;
    }

    .timeline-marker {
      left: 20px;
    }

    .timeline-item:last-child {
      margin-bottom: 0;
    }
  }
</style>
