---
/**
 * Timeline Component
 * Vertical timeline for storytelling with alternating left/right content
 */
interface TimelineEntry {
  date: string;
  title: string;
  content: string;
  variant?: "default" | "highlight" | "milestone";
}

interface Props {
  entries: TimelineEntry[];
}

const { entries } = Astro.props;
---

<div class="timeline" id="timeline">
  <!-- Progress indicator that moves with scroll -->
  <div class="timeline-progress" id="timeline-progress">
    <span class="progress-dot"></span>
  </div>

  {
    entries.map((entry, index) => (
      <div
        class:list={[
          "timeline-item",
          entry.variant || "default",
          index % 2 === 0 ? "left" : "right",
        ]}
      >
        <div class="timeline-marker">
          <span class="timeline-dot" />
        </div>
        <div class="timeline-content">
          <span class="timeline-date">{entry.date}</span>
          <h3 class="timeline-title">{entry.title}</h3>
          <p class="timeline-text" set:html={entry.content} />
        </div>
      </div>
    ))
  }
  <div class="timeline-line"></div>
</div>

<script>
  function initTimelineProgress() {
    const timeline = document.getElementById("timeline");
    const progressIndicator = document.getElementById("timeline-progress");

    if (!timeline || !progressIndicator) return;

    let ticking = false;

    function updateProgress() {
      const rect = timeline.getBoundingClientRect();
      const viewportCenter = window.innerHeight * 0.4;

      // Calculate progress (0 to 1) based on how far through the timeline we've scrolled
      const timelineTop = rect.top;
      const timelineHeight = rect.height;

      // Progress starts when timeline top reaches viewport center
      // Progress ends when timeline bottom reaches viewport center
      const scrolled = viewportCenter - timelineTop;
      const progress = Math.min(1, Math.max(0, scrolled / timelineHeight));

      // Position the progress dot
      progressIndicator.style.top = `${progress * 100}%`;

      // Add/remove active class based on visibility
      if (progress > 0 && progress < 1) {
        progressIndicator.classList.add("active");
      } else {
        progressIndicator.classList.remove("active");
      }

      ticking = false;
    }

    function onScroll() {
      if (!ticking) {
        requestAnimationFrame(updateProgress);
        ticking = true;
      }
    }

    // Initial check
    updateProgress();

    // Listen for scroll
    window.addEventListener("scroll", onScroll, { passive: true });
  }

  // Run on initial load
  initTimelineProgress();

  // Re-run on ViewTransitions navigation
  document.addEventListener("astro:page-load", initTimelineProgress);
</script>

<style>
  .timeline {
    position: relative;
    padding: var(--space-8) 0;
    max-width: 800px;
    margin: 0 auto;
  }

  .timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
    transform: translateX(-50%);
    z-index: 0;
  }

  /* Progress indicator */
  .timeline-progress {
    position: absolute;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
    z-index: 3;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .timeline-progress.active {
    opacity: 1;
  }

  .progress-dot {
    display: block;
    width: 16px;
    height: 16px;
    background: var(--color-accent);
    border-radius: 50%;
    box-shadow:
      0 0 0 4px rgba(0, 113, 227, 0.3),
      0 2px 8px rgba(0, 113, 227, 0.4);
    transform: translateX(-50%) translateY(-50%);
    margin-left: 50%;
  }

  .timeline-item {
    position: relative;
    display: flex;
    margin-bottom: var(--space-10);
    z-index: 1;
  }

  .timeline-item.left {
    flex-direction: row;
    text-align: right;
    padding-right: calc(50% + var(--space-8));
  }

  .timeline-item.right {
    flex-direction: row-reverse;
    text-align: left;
    padding-left: calc(50% + var(--space-8));
  }

  .timeline-marker {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
  }

  .timeline-dot {
    display: block;
    width: 14px;
    height: 14px;
    background: var(--color-bg);
    border: 2px solid var(--color-text-muted);
    border-radius: 50%;
    transition: all var(--transition-base);
  }

  /* Variants */
  .timeline-item.highlight .timeline-dot {
    background: var(--color-accent);
    border-color: var(--color-accent);
  }

  .timeline-item.milestone .timeline-dot {
    width: 18px;
    height: 18px;
    background: var(--color-accent);
    border-color: var(--color-accent);
    box-shadow: 0 0 0 4px rgba(0, 113, 227, 0.2);
  }

  .timeline-content {
    flex: 1;
  }

  .timeline-date {
    display: block;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-weight: 500;
    margin-bottom: var(--space-1);
  }

  .timeline-title {
    font-size: var(--text-lg);
    font-weight: 600;
    margin: 0 0 var(--space-2) 0;
    color: var(--color-text);
  }

  .timeline-text {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--color-text-muted);
    margin: 0;
  }

  .timeline-text :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  /* Mobile: Stack vertically */
  @media (max-width: 640px) {
    .timeline-line,
    .timeline-progress {
      left: 20px;
    }

    .progress-dot {
      margin-left: 0;
      transform: translateX(-50%) translateY(-50%);
    }

    .timeline-item.left,
    .timeline-item.right {
      flex-direction: row;
      text-align: left;
      padding-left: 50px;
      padding-right: 0;
    }

    .timeline-marker {
      left: 20px;
    }

    .timeline-item:last-child {
      margin-bottom: 0;
    }
  }
</style>
